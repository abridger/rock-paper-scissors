<% unless @current_player %>
  <h2>Please enter a username:</h2>
  <form action='/game' method='post'>
    <input type='text' name='username'>
    <input type='submit' value='Register'>
  </form>
<% end %>
<% if @current_player %>
  <p>Welcome back <%= @current_player.name %>! Ready to play again?</p>
  <form action='/game' method='post'>
    <input type='hidden' name='username' value='<%= @current_player.name %>'>
    <input type='submit' value='Play again'>
  </form>
  <p>Not <%= @current_player.name %>?</p>
  <form action='/reset' method='post'>
  <a href="/reset" class="button">Start a New Game</a>
<% end %>
